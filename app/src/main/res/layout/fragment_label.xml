<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/selectALabel"
		style="@style/BigText"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:text="@string/selectALabel"
		android:visibility="gone"/>

	<TextView
		android:id="@+id/emptyLabel"
		style="@style/BigText"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:text="@string/emptyLabel"
		android:visibility="gone"/>

	<ListView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="@dimen/listview_horizontal_margin"
		android:paddingRight="@dimen/listview_horizontal_margin"
		android:divider="@null" />

</RelativeLayout>
